<% include ./includes/header %>
	<div class="container">
		<div class="row">
			<table class="table table-hover table-border">
				<thead>
					<th>电影名称</th>
					<th>导演</th>
					<th>国家</th>
					<th>上映年份</th>
					<th>查看</th>
					<th>更新</th>
					<th>删除</th>
				</thead>
				<tbody>
					<% for(var i=0;i<movies.length;i++){ %>
						<tr class="item-id-1">
							<td><%= movies[i].title %></td>
							<td><%= movies[i].director %></td>
							<td><%= movies[i].country %></td>
							<td><%= movies[i].year %></td>
							<td><a href="/detail/<%= movies[i]._id %>" target="_blank">查看</a></td>
							<td><a class="btn btn-warning del" href="/admin/update/<%= movies[i]._id %>" target="_blank">修改</a></td>
							<td><button class="btn btn-danger del" data-id="<%= movies[i]._id %>">删除</button></td>
						</tr>
					<% } %>
				</tbody>
			</table>
		</div>
	</div>
</body>
</html>